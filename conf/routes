# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Staff home
GET     /staff                      controllers.Application.staff()

# Patient home
GET     /patient                    controllers.Application.patient()

# New patient
GET     /patient/new                controllers.Application.newPatient()

# Show patient
GET     /patient/:id                controllers.Application.showPatient(id: Long)

# Share patient
GET     /patient/:id/share          controllers.Application.sharePatient(id: Long)

# Edit patient
GET     /patient/:id/edit           controllers.Application.editPatient(id: Long)

# Create study
GET     /study/new                  controllers.Application.newStudy()

# Show study
GET     /study/:id                  controllers.Application.study(id: Long)

# Edit study
GET     /study/:id/edit             controllers.Application.editStudy(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
